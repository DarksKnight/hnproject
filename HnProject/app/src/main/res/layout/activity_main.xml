<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.ihuoniao.platform.webview.BridgeWebView
        android:id="@+id/bwv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.ldoublem.loadingviewlib.view.LVCircularRing
        android:id="@+id/lvc_loading"
        android:layout_width="@dimen/hn_50dp"
        android:layout_height="@dimen/hn_50dp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click me"
        android:visibility="visible"/>

</RelativeLayout>
